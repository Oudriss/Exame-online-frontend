<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>projet_GLE_FrontOffice</display-name>
  <welcome-file-list>
    <welcome-file>authentification.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>servlets.AuthentificationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/deconnect</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>servlets.AccueilServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>utils</servlet-name>
  	<servlet-class>servlets.UtilsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>utils</servlet-name>
  	<url-pattern>/printPDF</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>examen</servlet-name>
    <servlet-class>servlets.ExamenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>examen</servlet-name>
    <url-pattern>/examen</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>restriction</filter-name>
    <filter-class>filtres.RestrictionFiltre</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>restriction</filter-name>
    <url-pattern>/home</url-pattern>
    <url-pattern>/examen</url-pattern>
    <url-pattern>/</url-pattern>
    <url-pattern>/printPDF</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>examenTimer</filter-name>
    <filter-class>filtres.ExamenFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>examenTimer</filter-name>
    <url-pattern>/examen</url-pattern>
  </filter-mapping>
</web-app>